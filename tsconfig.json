{
    "compilerOptions": {
        "experimentalDecorators": true,
        "module": "commonjs",
        "target": "ES2017",
        "sourceMap": true,

        "noImplicitAny": false,
        "removeComments": false,
        "noUnusedLocals": true,
        "noImplicitThis": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,

        "lib": [
            "es2017"
        ]
    },
    "exclude": [
        "node_modules/",
        "testapp/",
        "testdata/"
    ]
}
